<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LifeManagementApp1.LandingPage"
             Title="LandingPage"
             BackgroundColor="#F2EAF4">


    <StackLayout Padding="30">
        <Label Padding="20" Text="Welcome to Life Management App" FontSize="32" TextColor="BlueViolet" HorizontalOptions="Center" />
        <Image Source="dotnet_bot.png" HeightRequest="185" Aspect="AspectFit"
                   SemanticProperties.Description="dot net bot in a race car number eight" />
        <Button Margin="20" Text="Go to Weather" Clicked="OnWeatherButtonClicked"/>
        <Button Margin="20" Text="Go to To-Do" Clicked="OnToDoButtonClicked"/>
    </StackLayout>
</ContentPage>

   